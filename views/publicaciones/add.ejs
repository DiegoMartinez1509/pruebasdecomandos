<% layout('../layout') %>
    <div class="mdc-layout-grid">
        <div class="mdc-layout-grid__inner">
            <div class="mdc-layout-grid__cell--span-4 mdc-layout-grid__cell--span-7-desktop stretch-card">
                <div class="mdc-card p-0 to-do-list">
                    <div class="d-flex bg-primary text-white to-do-list-header">
                        <h4 class="card-title">Alta Publicación</h4>
                    </div>
                    <div class="mdc-card">
                        <form action="/publicaiones/add" method="POST">
                            <div class="template-demo">
                                <div class="mdc-layout-grid__inner">
                                    <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-6-desktop">
                                        <div class="mdc-text-field w-100">
                                            <input class="mdc-text-field__input" id="text-field-hero-input" name="titulo" />
                                            <div class="mdc-line-ripple"></div>
                                            <label for="text-field-hero-input" class="mdc-floating-label">Título</label>
                                        </div>
                                    </div>
                                    <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12-desktop">
                                        <div class="mdc-text-field w-100">
                                            <input class="mdc-text-field__input" id="text-field-hero-input" name="descripcion" />
                                            <div class="mdc-line-ripple"></div>
                                            <label for="text-field-hero-input" class="mdc-floating-label">Descripcion</label>
                                        </div>
                                    </div>
                                    <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12-desktop">
                                        <div class="mdc-text-field w-100">
                                            <input class="mdc-text-field__input" id="text-field-hero-input" name="contenido" />
                                            <div class="mdc-line-ripple"></div>
                                            <label for="text-field-hero-input" class="mdc-floating-label">Contenido</label>
                                        </div>
                                    </div>
                                    <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-3-desktop">
                                        <div class="mdc-text-field w-100">
                                            <input class="mdc-text-field__input" id="text-field-hero-input" name="estado" />
                                            <div class="mdc-line-ripple"></div>
                                            <label for="text-field-hero-input" class="mdc-floating-label">Estado</label>
                                        </div>
                                    </div>
                                    <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-4-desktop">
                                        <div class="nativeDatePicker w-100">
                                            <div class="mdc-text-field">
                                                <input class="mdc-text-field__input" id="text-field-hero-input" type="date" name="fecha" />
                                                <div class="mdc-line-ripple"></div>
                                                <label for="text-field-hero-input" class="mdc-floating-label">Fecha de
                                                Publicación:</label>
                                                <span class="validity"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-3-desktop">
                                        <div class="mdc-text-field w-100">
                                            <input class="mdc-text-field__input" id="text-field-hero-input" name="id_empleado" />
                                            <div class="mdc-line-ripple"></div>
                                            <label for="text-field-hero-input" class="mdc-floating-label">Id
                                            Empleado</label>
                                        </div>
                                    </div>
                                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-8-desktop">
                                        <div class="template-demo">
                                            <button type="submit" class="mdc-button mdc-button--unelevated">
                                            <i class="material-icons">save</i>&nbsp;&nbsp;Guardar
                                        </button>
                                            <button type="reset" class="mdc-button mdc-button--unelevated filled-button--warning">
                                            <i class="material-icons">cancel</i>&nbsp;Cancelar
                                        </button>
                                            <a class="mdc-button mdc-button--unelevated filled-button--success" href='/publicaciones'><i class="material-icons">arrow_back</i>&nbsp;Volver
                                        </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>