<% layout('../layout') %>
    <% i = 1; %>
        <div class="mdc-layout-grid">
            <div class="mdc-layout-grid__inner">
                <div class="mdc-layout-grid__cell--span-4 mdc-layout-grid__cell--span-6-desktop stretch-card">
                    <div class="mdc-card p-0 to-do-list">
                        <div class="d-flex bg-primary text-white to-do-list-header">
                            <h4 class="card-title">Roles</h4>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hoverable">
                                <thead>
                                    <tr class="bg-primary">
                                        <th class="text-white">Id</th>
                                        <th class="text-white text-left">Nombre del Rol</th>
                                        <th class="text-white text-center">Editar</th>
                                        <th class="text-white text-center">Borrar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% roles.forEach(function(rol) { %>
                                        <tr>
                                            <td>
                                                <%= rol.id %>
                                            </td>
                                            <td class="text-left">
                                                <%= rol.nombre %>
                                            </td>
                                            <td>
                                                <a href="/roles/edit/<%= rol.id %>" class="mdc-button mdc-button--raised filled-button--info">
                                                    <i class="material-icons">edit</i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/roles/delete/<%= rol.id %>" class="mdc-button mdc-button--raised filled-button--secondary">
                                                    <i class="material-icons">delete</i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% i++}); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>