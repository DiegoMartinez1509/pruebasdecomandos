<% i=1; %>
<div class="mdc-layout-grid">
  <div class="mdc-layout-grid__inner">
    <div class="mdc-layout-grid__cell--span-4 mdc-layout-grid__cell--span-6-desktop stretch-card">
      <div class="mdc-card p-0 to-do-list">
        <div class="d-flex bg-primary text-white to-do-list-header">
          <h4 class="card-title">Cargos</h4>
        </div>
        <div class="table-responsive">
          <table class="table table-hoverable">
            <thead>
              <tr  class="bg-primary">
                <th class="text-left text-white">Id</th>
                <th class="text-left text-white">Cargo</th>
                <th class="text-white">Salario</th>
                <th class="text-center text-white">Editar</th>
                <th class="text-center text-white">Borrar</th>
              </tr>
            </thead>
            <tbody>
              <% cargos.forEach(function(cargo) { %>
              <tr>
                <td class="text-left"><%= cargo.id %></td>
                <td class="text-left"><%= cargo.nombre %></td>
                <td><%= cargo.sueldo %></td>
                <td>
                  <a href="/cargos/edit/<%= cargo.id %>" class="mdc-button mdc-button--raised filled-button--info">
                    <i class="material-icons">edit</i>
                  </a>
                </td>
                <td>
                  <a href="cargos/delete/<%= cargo.id %>" class="mdc-button mdc-button--raised filled-button--secondary">
                    <i class="material-icons">delete</i>
                  </a>
                </td>
              </tr>
              <% i++}); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
